{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"strict": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
  "exclude": ["node_modules", "./dist"]
}
